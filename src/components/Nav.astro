---
// Import the <Image /> component
import { Image } from "astro:assets"
// Import a reference to the image itself
import myLogo from "../assets/irsc-logo.png"
---

<nav class="fixed top-0 z-10 w-full bg-secondary">
  <div class="container flex items-center justify-between py-5 mx-auto">
    <div class="flex gap-2 item-center sm:mr-9">
      <a href="/">
       
        <Image class="item-center" src={myLogo} format="avif" width="160" height="112"alt="This is the company logo" />
      </a>

      <span class="hidden text-2xl font-bold py-14 text-accent md:flex"
        >Innovative Roofing Systems Canada.</span
      >
    </div>
    <ul
      class="hidden space-x-10 text-sm font-bold uppercase md:flex text-neutral dark:text-gray-100"
    >
      <li class="hover:text-[#3296FF]">
        <a href="/">Home</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="services">Services</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="about-us">About</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="projects">Projects</a>
      </li>
      <li class="hover:text-[#3296FF]">
        <a href="contact-us">Contact</a>
      </li>
    </ul>

    <div id="hamburger" class="z-20 space-y-1 cursor-pointer md:hidden">
      <div class="w-6 h-0.5 bg-white"></div>
      <div class="w-6 h-0.5 bg-white"></div>
      <div class="w-6 h-0.5 bg-white"></div>
    </div>
    <ul
      id="menu"
      class="absolute top-0 left-0 hidden w-full p-10 space-y-10 text-center text-base-100 bg-secondary rounded-b-3xl "
    >
      <li>
        <a id="hLink" href="/">Home</a>
      </li>
      <li>
        <a id="hlink" href="services">Services</a>
      </li>
      <li>
        <a id="hlink" href="about-us">About</a>
      </li>
      <li>
        <a id="hlink" href="projects">Projects</a>
      </li>
      <li>
        <a id="hlink" href="contact-us">Contact</a>
      </li>
    </ul>
  </div>
</nav>
